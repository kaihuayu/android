    android:paddingLeft="10dp">

    <!-- 下面两个是用来给  activity_main.xml里的ListView赋值,-->
    <TextView
        android:id="@+id/Textviewname"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="1"
